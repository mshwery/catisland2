<%= link_to @article.source.name, @article.source, class: "page-title" %>

<p id="notice"><%= notice %></p>

<article class="cf">
  <%= link_to 'Read later', article_stash_path(@article), class: "stash btn #{'stashed' if @article.stashed_by(current_user)}" if current_user %>
  <h2 class="title"><%= @article.title %></h2>
  <div class="content">
    <%= raw(@article.sanitized) %>
  </div>
  <div class="details">
    <%= link_to @article.source.name, @article.source, class: 'source' %>
    <%= link_to "Full Article â†’", @article.original_url, target: '_blank' if @article.original_url %>
  </div>

  <% if can? :update, @article %>
    <%= link_to 'Edit', edit_article_path(@article) %> |
  <% end %>
  <%= link_to 'Back', articles_path %>
</article>